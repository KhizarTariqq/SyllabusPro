<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp"
    android:layout_margin="8dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    >

        <TextView
                android:id="@+id/task_name"
                android:text="Name: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:id="@+id/task_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toEndOf="@id/task_name"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:id="@+id/task_description"
                android:text="Description: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_name"
        />

        <TextView
                android:id="@+id/task_display_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toEndOf="@id/task_description"
                app:layout_constraintTop_toTopOf="@id/task_description"
                app:layout_constraintBottom_toBottomOf="@id/task_description"
        />

        <TextView
                android:id="@+id/task_course"
                android:text="Course: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_description"
        />

        <TextView
                android:id="@+id/task_display_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toEndOf="@id/task_course"
                app:layout_constraintTop_toTopOf="@id/task_course"
                app:layout_constraintBottom_toBottomOf="@id/task_course"
        />

        <TextView
                android:id="@+id/task_priority"
                android:text="Priority: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_course"
        />

        <TextView
                android:id="@+id/task_display_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                app:layout_constraintStart_toEndOf="@id/task_priority"
                app:layout_constraintTop_toTopOf="@id/task_priority"
                app:layout_constraintBottom_toBottomOf="@id/task_priority"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>